    "@supabase/supabase-js": "^2.55.0",
    "@types/bcrypt": "^6.0.0",
    "@types/yargs": "^17.0.33",
    "apollo-server-express": "^3.12.0",
    "axios": "^1.4.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.56.10",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "dropbox": "^10.34.0",
    "express": "^4.18.2",
    "google-auth-library": "^10.2.1",
    "googleapis": "^155.0.1",
    "graphql": "^16.6.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-ws": "^6.0.6",
    "helmet": "^7.0.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "neo4j-driver": "^5.10.0",
    "pg": "^8.11.0",
    "redis": "^4.6.7",
    "uuid": "^9.0.0",
    "winston": "^3.10.0",
    "ws": "^8.18.3",
    "yargs": "^18.0.0"
